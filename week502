<?php
    $mark = 69;
    if($mark >= 80){
        echo ("$mark = A ");
    }elseif($mark >= 70 && $mark < 80){ //70-79
        echo ("$mark = B "); 
    }elseif($mark >= 60 && $mark < 70){ //60-79
        echo ("$mark = C "); 
    }elseif($mark >= 50 && $mark < 60){ //50-79
        echo ("$mark = D "); 
    }elseif($mark >= 40 && $mark < 50){ //40-79
        echo ("$mark = F "); 

    }else{
        echo ("$mark = Fails");  //-1 and 101
    }
?>